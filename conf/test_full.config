/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running full-size tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run nf-core/moleculardocking -profile test_full,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Full test profile'
    config_profile_description = 'Full test dataset to check pipeline function'

    // Input data for full size test
    input = "${projectDir}/tests/data/samplesheet_test_full.csv"

    // Docking box parameters are defined per-sample in the samplesheet
    // Global defaults only used if not specified in samplesheet
    size_x   = 25
    size_y   = 25
    size_z   = 25

    // Docking parameters - production quality
    exhaustiveness = 32
    num_modes      = 9
    energy_range   = 3

    // Molecule preparation
    receptor_ph = 7.4
    ligand_ph   = 7.4

    // Remove all heteroatoms (ligands, waters, ions) from receptor
    // Required because co-crystallized ligands can cause Open Babel conversion issues
    remove_heteroatoms = true
}
